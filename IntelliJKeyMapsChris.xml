<keymap version="1" name="IntelliJKeyMapsChris" disable-mnemonics="false">

  <!-- Replace <SPECIAL_LEFT> and <SPECIAL_RIGHT> -->

  <!-- Default editing keys -->
  <action id="EditorEnter">
    <keyboard-shortcut first-keystroke="enter" />
  </action>
  <action id="EditorBackSpace">
    <keyboard-shortcut first-keystroke="back_space" />
    <keyboard-shortcut first-keystroke="shift back_space" />
  </action>
  <action id="$Delete">
    <keyboard-shortcut first-keystroke="delete" />
  </action>
  <action id="EditorTab">
    <keyboard-shortcut first-keystroke="tab" />
  </action>
  <action id="EditorChooseLookupItem">
    <keyboard-shortcut first-keystroke="enter" />
  </action>
  <action id="EditorEscape">
    <keyboard-shortcut first-keystroke="escape" />
  </action>
  
  <action id="NextTemplateVariable">
    <keyboard-shortcut first-keystroke="tab" />
    <keyboard-shortcut first-keystroke="enter" />
  </action>

  <!-- Most common -->
  <action id="$Copy">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> c" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> c" />
  </action>
  <action id="$Paste">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> v" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> v" />
  </action>
  <action id="$Cut">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> x" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> x" />
  </action>
  
  <action id="$SelectAll">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> a" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> a" />
  </action>
  
  <action id="$Undo">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> z" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> z" />
  </action>
  <action id="$Redo">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift z" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift z" />
  </action>
  
  <action id="EditorDeleteLine">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> d" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> d" />
  </action>

  <!-- Search -->
  <action id="Find">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> f" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> f" />
  </action>
  <action id="Replace">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> h" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> h" />
  </action>
  
  <action id="FindInPath">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift f" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift f" />
  </action>
  <action id="ReplaceInPath">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift h" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift h" />
  </action>
  
  <action id="FindNext">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> 3" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> 3" />
  </action>
  <action id="FindPrevious">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift 3" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift 3" />
  </action>
  
  <!-- Movement -->
  <action id="EditorUp">
    <keyboard-shortcut first-keystroke="up" />
  </action>
  <action id="EditorDown">
    <keyboard-shortcut first-keystroke="down" />
  </action>
  <action id="EditorLeft">
    <keyboard-shortcut first-keystroke="left" />
  </action>
  <action id="EditorRight">
    <keyboard-shortcut first-keystroke="right" />
  </action>
  <action id="EditorLineStart">
    <keyboard-shortcut first-keystroke="home" />
  </action>
  <action id="EditorLineEnd">
    <keyboard-shortcut first-keystroke="end" />
  </action>
  <action id="EditorPageDown">
    <keyboard-shortcut first-keystroke="page_down" />
  </action>
  <action id="EditorPageUp">
    <keyboard-shortcut first-keystroke="page_up" />
  </action>
  <action id="EditorTextStart">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> home" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> home" />
  </action>
  <action id="EditorTextEnd">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> end" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> end" />
  </action>
  <action id="EditorNextWord">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> right" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> right" />
  </action>
  <action id="EditorPreviousWord">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> left" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> left" />
  </action>
  <!-- Movement selection -->
  <action id="EditorUpWithSelection">
    <keyboard-shortcut first-keystroke="shift up" />
  </action>
  <action id="EditorDownWithSelection">
    <keyboard-shortcut first-keystroke="shift down" />
  </action>
  <action id="EditorLeftWithSelection">
    <keyboard-shortcut first-keystroke="shift left" />
  </action>
  <action id="EditorRightWithSelection">
    <keyboard-shortcut first-keystroke="shift right" />
  </action>
  <action id="EditorLineStartWithSelection">
    <keyboard-shortcut first-keystroke="shift home" />
  </action>
  <action id="EditorLineEndWithSelection">
    <keyboard-shortcut first-keystroke="shift end" />
  </action>
  <action id="EditorPageDownWithSelection">
    <keyboard-shortcut first-keystroke="shift page_down" />
  </action>
  <action id="EditorPageUpWithSelection">
    <keyboard-shortcut first-keystroke="shift page_up" />
  </action>
  <action id="EditorTextStartWithSelection">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift home" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift home" />
  </action>
  <action id="EditorTextEndWithSelection">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift end" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift end" />
  </action>
  <action id="EditorNextWordWithSelection">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift right" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift right" />
  </action>
  <action id="EditorPreviousWordWithSelection">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> shift left" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> shift left" />
  </action>

  <!-- Java code aware -->
  <action id="ShowUsages">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> j" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> j" />
  </action>
  <action id="GotoDeclaration">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> k" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> k" />
  </action>
  <action id="GotoImplementation">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> l" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> l" />
  </action>
  <action id="QuickJavaDoc">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> semicolon"/>
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> semicolon" />
  </action>
  <action id="GotoClass">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> m"/>
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> m" />
  </action>

  <action id="ReformatCode">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> i" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> i" />
  </action>
  <action id="OptimizeImports">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> o" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> o" />
  </action>

  <action id="CodeCompletion">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> space" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> space" />
  </action>
  <action id="ShowIntentionActions">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> enter" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> enter" />
  </action>
  
  <action id="CommentByLineComment">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> slash" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> slash" />
  </action>
  <action id="RenameElement">
    <keyboard-shortcut first-keystroke="<SPECIAL_LEFT> r" />
    <keyboard-shortcut first-keystroke="<SPECIAL_RIGHT> r" />
  </action>
  
  <!-- To action -->
  <action id="Compile">
    <keyboard-shortcut first-keystroke="f1" />
  </action>
  <action id="Run">
    <keyboard-shortcut first-keystroke="f2"/>
  </action>
  <action id="Debug">
    <keyboard-shortcut first-keystroke="f3"/>
  </action>
  
  <!-- Debug -->
  <action id="ShowExecutionPoint">
    <keyboard-shortcut first-keystroke="f4" />
  </action>
  
  <action id="ToggleLineBreakpoint">
    <keyboard-shortcut first-keystroke="f5" />
  </action>
  <action id="ToggleBreakpointEnabled">
    <keyboard-shortcut first-keystroke="f6" />
  </action>
  
  <action id="StepInto">
    <keyboard-shortcut first-keystroke="f7" />
  </action>
  <action id="StepOver">
    <keyboard-shortcut first-keystroke="f8" />
  </action>
  <action id="StepOut">
    <keyboard-shortcut first-keystroke="f9" />
  </action>
  <action id="Resume">
    <keyboard-shortcut first-keystroke="f10" />
  </action>
</keymap>
